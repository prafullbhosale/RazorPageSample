@page
@model RazorPageSample.Pages.Cars.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form method="post" class="form-horizontal">
    <div class="form-horizontal">
        <h4>Car</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Car.ID" />
        <div class="form-group">
            <label asp-for="Car.Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Car.Name" class="form-control" />
                <span asp-validation-for="Car.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Car.IsNew" />
                    <label asp-for="Car.IsNew"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Car.ManufacturerId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="Car.ManufacturerId" class="form-control" asp-items="ViewBag.ManufacturerId"></select>
                <span asp-validation-for="Car.ManufacturerId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
