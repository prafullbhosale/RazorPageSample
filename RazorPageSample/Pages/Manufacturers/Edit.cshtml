@page
@model RazorPageSample.Pages.Manufacturers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form method="post" class="form-horizontal">
    <div class="form-horizontal">
        <h4>Manufacturer</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Manufacturer.ManufacturerId" />
        <div class="form-group">
            <label asp-for="Manufacturer.Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Manufacturer.Name" class="form-control" />
                <span asp-validation-for="Manufacturer.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
